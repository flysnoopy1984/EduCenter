@page
@model EduCenterWeb.Pages.WebBackend.User.ListModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Pages/Shared/_EduMainPCWeb.cshtml";
}
@section navBar{
    <li><a href="/WebBackend/Home">主页</a></li>
}
<script src="~/lib/laydate/laydate.js"></script>

<link href="~/lib/layui/css/layui.css" rel="stylesheet" />
<script src="~/lib/layui/layui.js"></script>
<script src="~/lib/layui/lay/modules/laypage.js"></script>

<script src="~/js/WebBackEnd/User/List.js?v=@Model.jsVersion"></script>
<style type="text/css">
    .OptionArea {
        margin: 20px;
        display:flex;
    }

    #UserListTable {
      width:1200px;
        font-size: 11px;
    }

        #UserListTable tr th {
            border: solid 1px #808080;
            text-align:center;
             height:34px;
        }

        #UserListTable tr td {
            border: solid 1px #808080;
            height:30px;
            padding:8px;
           
        }

        .form-control{
            width:auto;
        }
        .OneField{
            display:flex;
            margin-right:20px;
        }
         #UserListTable tr td input{
            height:100%;
            /*width:90%;*/
            border:none;
            outline:none;
        }
         .RowOption{
             display:flex;
             /*width:100%;*/
             justify-content:space-around;
         }
         .DeadLineStd{width:80px;}
         table{
             table-layout:fixed;word-break:break-all;
         }
         input[type=number]
         {
             width:60px;
         }
         .RealName{width:60px;}
         
</style>

<div class="MainContainer">
    <div class="OptionArea">
        <div class="OneField">
            <div><label>用户：</label></div>
            <div >
                <input class="form-control input-sm" id="UserName" type="text" value="">
            </div>
        </div>
     
        <div>
            <input id="btnQuery" type="button" class="btn btn-primary btn-sm" value="查询" />
        </div>
    </div>
    <div class="DataArea">
        <table id="UserListTable" border="0" cellpadding="0" cellspacing="0">
            <tr id="Header">
                <th width="200px">操作</th>
                <th width="150px">用户微信名</th>
                <th>家长姓名</th>
                <th>宝贝姓名</th>
                <th>用户类型</th>
                <th>会员类型</th>
                <th>特殊价格</th>
                <th>标准班剩余课时</th>
                <th>暑假班剩余课时</th>
                <th>寒假班剩余课时</th>
                <th width="122px">标准班有效期</th>
                @*<th>暑假班有效期</th>
                <th>寒假班有效期</th>*@
                @*<th>允许选择标准课</th>
        <th>允许选择假期课</th>*@
            </tr>
           
        </table>

        <div id="Pager"></div>
    </div>
</div>
<div id="HideData" style="display:none">
    <table id="DataTable">
        <tr openId="">
            <td>
                <div class="RowOption">
                    <div>
                        <input type="button" class="btn btn-danger btn-xs" value="课程调整" />
                    </div>
                    <div>
                        <input type="button" class="btn btn-warning btn-xs" value="保存" id="btn_Save" />
                    </div>
                </div>
            </td>
            <td><label class="WxName TextNoWrap2"></label></td>
            <td><input class="RealName" type="text" /></td>
            <td><label class="BabyName"></label></td>
            <td>
                <label class="UserRole"></label>
            </td>
            <td>
                <select class="MemberType">
                    @foreach (var mt in Model.MemberTypeList)
                    {
                    <option value="@mt.Key">@mt.Value</option>
                    }

                </select>
            </td>
            <td>
                <input class="VipPrice" type="number" />
            </td>
            <td>
                <input class="RemainTimeStd" type="number" />
            </td>
            <td><input class="RemainTimeSummer" type="number"></td>

            <td><input class="RemainTimeWinter" type="number"></td>
            <td>
                <input class="DeadLineStd" readonly type="text">
                <div class="fa fa-calendar fa-2x DatePick" id=""></div>
            </td>
        </tr>
    </table>
</div>