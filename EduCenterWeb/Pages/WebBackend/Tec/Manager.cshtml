@page
@model EduCenterWeb.Pages.WebBackend.Tec.ManagerModel
@{
    ViewData["Title"] = "Manager";
    Layout = "~/Pages/Shared/_EduMainPCWeb.cshtml";
}
@section navBar{
    <li><a href="/Home">主页</a></li>
}
<link href="~/css/Layouts/ManagerStyle.css" rel="stylesheet" />
<link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
<script src="~/lib/jquery.blockUI/jquery.blockUI.js"></script>
<link href="~/css/Plugs/LoadingIcon.css" rel="stylesheet" />
<script src="~/js/EduLib/EditHelper.js"></script>

<style type="text/css">
.FormFields{
    width:800px!important;
}
  .FieldValue {
    width: 30% !important;
}
  .FieldLabel{
      width:15% !important;
  }
</style>

<div class="TitleBar">
    <div class="Title">教师管理</div>
    <div><input type="button" class="btn btn-danger" value="新增教师" /></div>
</div>
<div class="MainContainer">
    <div class="LeftList">
        @foreach (var obj in Model.TecList)
        {
            <a href="javascript:SelTec('@obj.Code');" id="cItem_@obj.Code"  Key="@obj.Code" class="list-group-item">@string.Format("{0}_{1}", obj.Code, obj.Name)</a>
        }
    </div>
    <div class="RightDetail">
        <div class="RTecInfo">

            <div class="FormFields" id="FormFields">
                <div class="FieldRow">
                    <div class="FieldLabel">编号:</div><div class="FieldValue"><input id="vCode" type="text" class="form-control" /></div>
                    <div class="FieldLabel">名称:</div><div class="FieldValue"><input id="vTypeName" type="text" class="form-control" /></div>
                </div>
                <div class="FieldRow">
                    <div class="FieldLabel">微信昵称:</div><div class="FieldValue"><input id="vCode" type="text" class="form-control" /></div>
                    <div class="FieldLabel">手机号:</div><div class="FieldValue"><input id="vTypeName" type="text" class="form-control" /></div>
                </div>
                <div class="FieldRow">
                    <div class="FieldLabel">性别:</div><div class="FieldValue"><input id="vCode" type="text" class="form-control" /></div>
                    <div class="FieldLabel">加入时间:</div><div class="FieldValue"><input id="vCode" type="text" class="form-control" /></div>
                </div>
            </div>
        </div>
        <div class="RTecSkill"></div>
        <div class="RTecLeave"></div>
    </div>

</div>

