@page
@model EduCenterWeb.Pages.WebBackend.Tec.NewLeaveModel
@{
    ViewData["Title"] = "NewLeave";
    Layout = "~/Pages/Shared/_EduWebDialog.cshtml";
}
@Html.AntiForgeryToken()
<script src="~/lib/laydate/laydate.js"></script>
<script src="~/lib/layer-v3.1.1/layer/layer.js"></script>
<link href="~/css/Plugs/checkbox_radio.css" rel="stylesheet" />

<link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
<script src="~/lib/jquery.blockUI/jquery.blockUI.min.js"></script>
<script src="~/js/WebBackEnd/Tec/NewLeave.js"></script>
@*<link href="~/css/Plugs/layui.css" rel="stylesheet" />
    <script src="~/lib/layui/layui.js"></script>
    <script src="~/lib/layui/lay/modules/form.js"></script>*@

<style type="text/css">
    .DataRowSingle {
        width: 400px;
        display: flex;
        margin-bottom: 20px;
        align-items: baseline;
    }

        .DataRowSingle .FieldLabel {
            width: 30%
        }

        .DataRowSingle .FieldValue {
            width: 70%;
        }

    .DatePick {
        display: flex;
    }

        .DatePick .StartDateInput {
            width: 150px;
            border-bottom: solid 1px #808080;
            margin-right: 10px;
        }

    .DialogContainer {
        margin: 40px;
    }

    lable {
        font-weight: bold !important;
    }

    .LessonList {
        display: none;
    }

    .NoLesson {
        display: none;
        font-size: 16px;
    text-align: center;
    margin-top: 40px;
    font-weight: bold;
    }
</style>


<div class="DialogContainer">
    <div class="DataRowSingle">
        <div class="FieldLabel"><label>请假日期</label></div>
        <div class="FieldValue">
            <div class="DatePick">
                <div class="StartDateInput"></div>
                <div class="fa fa-calendar fa-2x btnCalendarIcon" id="btn_StartDatePick"></div>
            </div>
        </div>
    </div>
    <div class="DataRowSingle">
        <div class="FieldLabel"><label>教师</label></div>
        <div class="FieldValue">
            <select id="selTecCode" class="form-control">
                <option value="-1">请选择</option>
                @foreach (var tec in Model.TecList)
                {
                    <option value="@tec.Code">@tec.Name</option>
                }
            </select>
        </div>
    </div>

    <div class="NoLesson"> 没有课程</div>
    <div class="LessonList">
        <hr />
        <input id="btn_selectAll" type="button" value="全天"  class="btn btn-info btn-xs" />
        <hr />
        <div style="text-align:center">
            <input id="btn_submitLeave" type="button" value="提交请假" class="btn btn-warning" />
        </div>
    </div>
</div>
<div id="HideData" style="display:none;">
    <div class="checkbox checkbox-warning">
        <input id="" type="checkbox" tcId="">
        <label for="">

        </label>
    </div>
</div>

