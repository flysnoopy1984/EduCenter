@page
@model EduCenterWeb.Pages.Independent.RegPhoneModel
@{
    Layout = null;
}
@Html.AntiForgeryToken()
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/fonts/font-awesome.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
    <script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
    <script src="~/lib/jquery.blockUI/jquery.blockUI.js"></script>


    <script src="~/Components/PhoneVerify/SMS.js"></script>
    <script src="~/Components/PhoneVerify/RegPhone.js"></script>

    <title>手机注册</title>
    <style>
        .o2o_header {
            height: 50px;
            width: 100%;
            position: absolute;
            top: 0px;
            text-align: center;
            line-height: 50px;
            border: 1px solid #f1f1f1;
            font-size: 21px;
            display: flex;
            justify-content: center;
        }

        .o2o_content {
            width: 100%;
            position: absolute;
            top: 50px;
            height: 400px;
            padding: 0 15px;
        }

        #get_phone_check {
            width: 100%;
            height: 50px;
            border-bottom: 1px solid #dddddd;
            margin-top: 25px;
        }

        .get_phone_check_input {
            width: 50%;
            font-weight: bold;
            display: inline-block !important;
            vertical-align: middle;
            margin-top: 7px;
            border: 0px;
            padding-left: 10px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0);
        }

        button:focus {
            outline: none !important;
            border-radius: 4px !important;
            border: 1px solid #000000 !important;
        }

        input:focus {
            outline: none !important;
            border-color: #cfdc00 !important;
            box-shadow: 0 0 5px rgba(255, 255, 255, 0.4) !important;
            border-radius: 5px !important;
        }

        .input_clear {
            width: 22px;
            height: 22px;
            margin-top: 4px;
            display: none;
            vertical-align: middle;
            background-image: url('/images/clear.png');
            background-repeat: no-repeat;
            background-size: 100%;
        }

        .get_phone_btn {
            display: inline-block !important;
            height: 40px;
            /*border: 1px solid #000000;*/
            padding: 5px;
            margin-top: 4px;
            width: 90px;
            text-align: center;
            position: absolute;
            right: 15px;
            font-size: 13px;
            line-height: 28px;
            cursor: pointer;
        }

        .get_code_btn {
            display: inline-block !important;
            height: 40px;
            /*border: 1px solid #000000;*/
            padding: 5px;
            margin-top: 4px;
            width: 90px;
            text-align: center;
            position: absolute;
            right: 15px;
            font-size: 13px;
            line-height: 28px;
            cursor: pointer;
        }

        #verify_phone_check {
            width: 100%;
            height: 50px;
            border-bottom: 1px solid #dddddd;
            margin-top: 25px;
        }

        .IconBack {
            position: absolute;
            left: 15px;
            top: 17px;
        }
    </style>
</head>
<body>
    <div class="o2o_header">
        <i class="IconBack fa fa-arrow-circle-o-left" aria-hidden="true"></i> <div class="header_title">手机绑定</div>
    </div>
    <div class="o2o_content" id="main">
        <!-- 获取验证码 -->
        <div id="get_phone_check">
            <input id="phone_num" type="tel" placeholder="请输入手机号" class="get_phone_check_input text-primary" />
            <div id="phone_clear" class="input_clear" onclick="clearPhone();"></div>
            <button type="button" class="btn btn-warning get_phone_btn" id="btn_GetVerifyCode">获取验证码</button>

        </div>
        <!-- 确认验证 -->
        <div id="verify_phone_check">
            <input id="code_num" type="tel" placeholder="请输入验证码" class="get_phone_check_input text-success" />
            <div id="code_clear" class="input_clear" onclick="clearCode();"></div>
            <button type="button" class="btn btn-success get_code_btn" id="btn_ConfirmVerifyCode">确认验证</button>
        </div>

    </div>
</body>
</html>
