<style type="text/css">
    .MainContainer {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin-left: 10px;
        margin-right: 10px;
        height: 100%;
    }

    .Title {
        color: #ff6a00;
        text-align: center;
        height: 34px;
        line-height: 34px;
        font-size: 20px;
        margin-top: 40px;
        margin-bottom: 30px;
        background-color: #96dffd;
        width: 80%;
        border-radius: 8px;
        font-weight:bold;
    }

    .CourseArea {
