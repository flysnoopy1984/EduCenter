<div class="MainContainer">
    <div class="TaoBaoFont Title">
        课程选择
    </div>

    <div class="GridContainder">
        <div class="SelectCourseTimeTitle">请点击选择您上课的时间</div>
        <div class="layui-tab layui-tab-card">
            <ul class="layui-tab-title">
                <li class="layui-this">双休日</li>
                <li>周一到周五</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <!--双休日-->
                    <table id="GridWeek" class="CourseGrid" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <th></th>
                            <th style="color:#65dd03">周六</th>
                            <th style="color:#ff661c">周日</th>
                        </tr>
                        @foreach (var time in Model.CourseTimes)
                        {

                            <tr>
                                <td style="font-weight:bold">@time.TimeRange</td>
                                @for (int i = 0; i < 2; i++)
                                {

                                    <td>
                                        <div day="@(i+6)" lesson="@time.Lesson" class="CellContainer" onclick="selectCourse(this);">
                                            无<span class="caret"></span>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }


                    </table>
                </div>
                <div class="layui-tab-item">
                    <!--周1到周5-->
                    <table id="GridNormal" class="CourseGrid" border="0" cellspacing="0" cellpadding="0">
                        <tr>
                            <th></th>
                            @foreach (var time in Model.CourseTimes)
                            {
                                if (time.Lesson == 5 || time.Lesson == 6)
                                {
                                    <th>
                                        @time.TimeRange
                                    </th>
                                }

                            }
                        </tr>

                        @for (int i = 1; i < 6; i++)
                        {
                            <tr>
                                <td style="font-weight:bold">@GetDayName(i)</td>
                                @for (int j = 0; j < 2; j++)
                                {
                                    <td>
                                        <div day="@i" lesson="@(j+5)" class="CellContainer" onclick="selectCourse(this);">
                                            无<span class="caret"></span>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </table>
                </div>


            </div>
        </div>

    </div>

    <div class="SelectedArea">
        <div class="SelectedCourseTitle">已选择课程</div>
        <div class="CourseItems">
            <div class="Item">
                <div>
                    美术1
                </div>
                <div>
                    (周1 6:00-7:00)
                </div>
            </div>
            <div class="Item">
                <div>
                    美术1
                </div>
                <div>
                    (周1 6:00-7:00)
                </div>
            </div>
          

        </div>
    </div>


</div>

