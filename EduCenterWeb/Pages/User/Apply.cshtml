@page
@model EduCenterWeb.Pages.User.ApplyModel
@{
    ViewData["Title"] = "Apply";
    Layout = "~/Pages/Shared/_EduMainApp.cshtml";
}
@Html.AntiForgeryToken()
@functions{
    public string GetDayName(int day)
    {
        switch (day)
        {
            case 1: return "周一";
            case 2: return "周二";
            case 3: return "周三";
            case 4: return "周四";
            case 5: return "周五";


        }
        return "";
    }
}
<style type="text/css">
    .MainContainer {
