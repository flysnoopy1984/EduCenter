@page
@model EduCenterWeb.Pages.User.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_EduMainApp.cshtml";
}

<style type="text/css">
    /*Lay Out*/
    .MainContent {
     
     //   background-image: url('/images/bk_applogin.png');
        background-repeat:no-repeat;
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100vh;
    }
    /* Login Area */
    .LogoArea{
        flex-grow:2;
        background-image: url('/images/LOGO_120.png');
        background-position:center bottom;
        background-repeat:no-repeat;
        /*background-color:aliceblue;*/
    }
    .FieldsArea{
        flex-grow:1;
        display:flex;
        justify-content:center;
        flex-direction:column;
         /*background-color:antiquewhite;*/
    }
    .FieldsArea div{
       display:flex;
       justify-content:center;
    }
    .ButtonArea{
       flex-grow:0.2;
       text-align:center;
       /*display:flex;
       justify-content:center;
       flex-direction:column;*/
    }

   .ButtonArea #NoAccountLine
   {
       margin-top:15px;
   }
   
      /*.ButtonArea .line2{
        flex-grow:3;
    }*/
    .FootAerea{
        flex-grow:1.8;
        display:flex;
        flex-direction: column;
        align-items: center;
        /*background-color:#9900db;*/
        /*border-top:1px outset #808080;*/
    }
     /*Lay Out*/
    .EduFieldValue{
      
        border:none;
        border-bottom:1px solid #efefef;
        border-radius:0px;
        height:54px;
        line-height:54px;
        padding:2px 6px;
        width:70%;
        -webkit-box-shadow: none;
        background-color:transparent;
        outline:none;
         font-size:16px;
       
    }
    .EduLoginButton{
        width:50%;
        height:44px;
        border-radius: 20px;
        cursor:pointer !important;
        outline:none!important;
    }
    .EduFieldValue:focus{
         border-bottom:1px solid #76c5fe;
    }
    .OtherLoginLine{
        position: relative;
        margin: 0 0 10px;
        font-size: 12px;
        color: #b5b5b5;
        width:300px;
        text-align:center;
      
    }
    .OtherLoginLine::before{
        content: "";
        border-top: 1px solid #b5b5b5;
        display: block;
        position: absolute;
        width: 60px;
        top: 5px;
    }

    .OtherLoginLine::after{
         content: "";
           border-top: 1px solid #b5b5b5;
        display: block;
        position: absolute;
        width: 60px;
        top: 5px;
      right: 10px;
    }
   

    ::-webkit-input-placeholder { /* WebKit browsers */
        color: #808080;
        font-size:16px;
}
    
</style>
<style>
    .wxicon {
        width: 50px;
        height: 50px;
        vertical-align: -0.15em;
        fill: currentColor;
        overflow: hidden;
        color:#00d31b;
         cursor:pointer !important;
    }
</style>
<script src="~/lib/iconfont.js"></script>

<div class="MainContent">
    <div class="LogoArea">

    </div>
    <div class="FieldsArea">
        <div><input type="text" placeholder="请输入手机号" class="EduFieldValue" /></div>
        <div><input type="text" placeholder="请输入密码" class="EduFieldValue" style="margin-top:25px;" /></div>
    </div>
    <div class="ButtonArea">

        <input type="button" class="btn btn-info EduLoginButton" value="登陆" />
        <div id="NoAccountLine"> <a href="#">没有账号？</a></div>


    </div>
    <div class="FootAerea">
        <h6 class="OtherLoginLine">微信登录</h6>
        <div><svg class="wxicon" aria-hidden="true">
                <use xlink:href="#icon-weixin"></use>
            </svg>
        </div>
    </div>

</div>

