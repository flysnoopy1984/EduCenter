@page
@model EduCenterWeb.Pages.User.BuyCourseTimeModel
@{
    ViewData["Title"] = "BuyCourseTime";
    Layout = "~/Pages/Shared/_EduMainApp.cshtml";
}

@*<script src="~/lib/iconfont.js"></script>*@
<script type="text/javascript" src="~/lib/iconfont.js"></script>
<link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
<script src="~/js/EduLib/EditHelper.js"></script>
<script src="~/js/EduLib/StorageManager.js"></script>
<script src="~/js/Wap/User/UserBuyCourseTime.js"></script>

<style type="text/css">
    .MainContainer {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin-left: 10px;
        margin-right: 10px;
        height: 100vh;
    }

    .Title {
        color: #ff6a00;
        text-align: center;
        height: 34px;
        line-height: 34px;
        font-size: 20px;
        margin-top: 10px;
        margin-bottom: 10px;
        border-bottom: 1px groove #e1e0e0;
        width: 80%;
    }

    .Content {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .CourseStandardPriceTitle {
        font-weight: bold;
        border-radius: 4px;
        color: #ffffff;
        background-color: #88caec;
        padding-left: 5px;
        height: 35px;
        line-height: 35px;
        width: 100%;
        margin-top: 10px;
        margin-bottom: 10px;
    }

    .PriceList {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .PriceItem {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .ItemRemark {
        height: 35px;
        line-height: 35px;
        font-size: 22px;
        font-weight: bold;
        display: flex;
        justify-content: space-between;
        width: 80%;
        color: #0094ff;
        margin-bottom: 10px;
    }

    .BuyCount {
        width: 80%;
        display: flex;
        justify-content: space-between;
    }

        .BuyCount .BuyWord {
            font-size: 20px;
            font-weight: bold;
        }

        .BuyCount .BuyField {
            height: 40px;
            line-height: 40px;
            display: flex;
            width: 55%;
            justify-content: space-around;
        }

    .buyNum {
        width: 60px;
        display: unset;
        color: #00350a;
        font-weight: bold;
    }
</style>

@*Icon*@
<style type="text/css">
    .TitleIcon {
        width: 1em;
        height: 1em;
        vertical-align: -0.15em;
        fill: currentColor;
        overflow: hidden;
        /*color:#00d31b;*/
    }

    .btnIcon {
        width: 32px;
        height: 32px;
        vertical-align: -0.15em;
        fill: currentColor;
        overflow: hidden;
        /*color:#00d31b;*/
    }
    
</style>
<div class="MainContainer">
    <div class="Title">
        <svg class="TitleIcon" aria-hidden="true">
            <use xlink:href="#icon-gouwu"></use>
        </svg><span>购买课时</span>
    </div>
    <div class="Content">
        <div class="CourseStandardPriceTitle"><i class="fa fa-list" aria-hidden="true"></i>  课时价格</div>
        <div class="PriceList">
            <div class="PriceItem">
                <div class="ItemRemark">
                    <div>标准价格</div>
                    <div><span style="color:#ff6a00">200</span>元/课时</div>

                </div>
                <div class="BuyCount">
                    <div class="BuyWord">购买</div>
                    <div class="BuyField">
                        <svg class="btnIcon" aria-hidden="true" style="margin-top:2px;" onclick="DelBuyNum();">
                            <use xlink:href="#icon-btnright"></use>
                        </svg>
                        <input type="text" id="buyNum" readonly value="20" class="form-control buyNum" />
                        <svg class="btnIcon" aria-hidden="true" onclick="AddBuyNum();">
                            <use xlink:href="#icon-btnleft"></use>
                        </svg>
                    </div>

                </div>
            </div>
        </div>
        <div class="BtnAreaList">

        </div>
    </div>
</div>

