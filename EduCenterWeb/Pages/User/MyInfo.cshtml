@page
@model EduCenterWeb.Pages.User.MyInfoModel
@{
    ViewData["Title"] = "MyInfo";
    Layout = "~/Pages/Shared/_EduMainApp.cshtml";
}
@Html.AntiForgeryToken()
<script src="~/lib/laydate/laydate.js"></script>

<link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
<script src="~/lib/jquery.blockUI/jquery.blockUI.js"></script>
<script src="~/js/EduLib/EditHelper.js"></script>
<script src="~/js/Wap/User/MyInfo.js"></script>
<style>
    .MainContainer {
        display: flex;
        flex-direction: column;
    }

    .ProfileHeader {
        display: flex;
        height: 150px;
    }

    .ImgHeaderArea {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40%
    }

        .ImgHeaderArea img {
            border: solid 1px white;
            border-radius: 90px;
            width: 90px;
            height: 90px;
        }

    .UserSimpleInfo {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 60%;
    }

        .UserSimpleInfo .Name {
            font-weight: bold;
            width: 80%;
        }

        .UserSimpleInfo .Phone {
            font-size: 11px;
        }

    .BabyInfo {
        width: 90%;
        margin-top: 20px;
        margin-bottom: 20px;
        border-bottom: dashed 1px #808080;
        align-self: center;
    }

    .form-group {
        display: flex;
        justify-content: space-between;
        width:100%;
    }
    .form-group > div{
        flex-grow:1;
    }


    .BtnArea {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-bottom: 30px;
    }

    .BabyInfoTitleBar {
        width: 95%;
        display: flex;
        justify-content: space-between
    }

    .BabyInfoTitle {
        margin-bottom: 20px;
        border-bottom: solid 1px #e8be45;
        padding-bottom: 4px;
        width: 30%;
        text-align: center;
        font-weight:bold;
    }

    .BabyInfoOption {
        display: flex;
        width: 50%;
        justify-content: space-around;
    }
</style>
<div class="MainContainer">
    @if (Model.UserSession != null)
    {
        <div class="ProfileHeader bg-info">
            <div class="ImgHeaderArea">
                <img src="@Model.UserSession.HeaderUrl" />
            </div>
            <div class="UserSimpleInfo">
                <div class="Name TextNoWrap">@Model.UserSession.UserName</div>
                <div class="Phone text-success">
                    联系方式：
                    @if (string.IsNullOrEmpty(Model.UserSession.Phone))
                    {
                        <i id="btn_EditPhone" class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    }
                    else
                    {
                        @Model.UserSession.Phone
                    }
                </div>
            </div>
        </div>
    }
    
    <div id="FirstBaby" class="BabyInfo">

        <div class="BabyInfoTitleBar">
            <div class="BabyInfoTitle  text-primary">我的宝贝</div>
            <div class="BabyInfoOption">
                <div class="text-warning" id="AddBaby">
                    <i class="fa fa-plus-square" aria-hidden="true"></i>
                    添加二胎
                </div>
                <div class="text-danger" id="DelBaby">
                    <i class="fa fa-minus-square" aria-hidden="true"></i>
                    删除
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
                <input class="form-control input-sm" id="Name" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">性别</label>
            <div class="col-sm-10" >
                <select id="Sex" class="form-control input-sm">
                    <option value="0">男</option>
                    <option value="1">女</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">年龄</label>
            <div class="col-sm-10">
                <input class="form-control input-sm" id="Age" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">生日</label>
            <div class="col-sm-10">
                <input class="form-control input-sm" id="BirthDay" type="text" value="">
            </div>
        </div>
    </div>
    <div id="SecBaby" class="BabyInfo" style="display:none">
        <div class="BabyInfoTitle  text-primary">第二个宝贝</div>
        <div class="form-group">
            <label class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-10">
                <input class="form-control input-sm" id="Name" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">性别</label>
            <div class="col-sm-10">
                <select id="Sex" class="form-control input-sm">
                    <option value="0">男</option>
                    <option value="1">女</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">年龄</label>
            <div class="col-sm-10">
                <input class="form-control input-sm" id="Age" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">生日</label>
            <div class="col-sm-10">
                <input class="form-control input-sm" id="BirthDay" type="text" value="">
            </div>
        </div>
    </div>

    <div class="BtnArea">
        <button id="btnSave" class="btn btn-info btn-sm">
            保存信息
        </button>
    </div>
</div>

