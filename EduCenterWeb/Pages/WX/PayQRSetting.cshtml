@page
@model EduCenterWeb.Pages.WX.PayQRSettingModel
@{

    Layout = "~/Pages/Shared/_EduMainAppNoMenus.cshtml";
}
@Html.AntiForgeryToken()
<link href="~/lib/jquery-confirm/jquery-confirm.min.css" rel="stylesheet" />
<script src="~/lib/jquery-confirm/jquery-confirm.min.js"></script>
<script src="~/lib/jquery.blockUI/jquery.blockUI.js"></script>
<link href="~/css/Plugs/checkbox_radio.css" rel="stylesheet" />
<script src="~/js/EduLib/EditHelper.js?v=@Model.jsVersion"></script>
<script src="~/js/Wap/WX/payQRSetting.js?v=@Model.jsVersion"></script>

<style type="text/css">
    .MainContainer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .Title {
        height: 50px;
        line-height: 50px;
        text-align: center;
        width: 100%;
        font-size: 18px;
        font-weight: bold;
        color: #0094ff;
    }

    .QRSetting {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 200px;
        width:80%;
    }

    #payAmount {
        font-size: 18px;
        font-weight: bold;
        height: 40px;
        line-height: 40px;
    }
    #QRImg{
        width:250px;
    }
    #courseTime{
        width:80px; display:unset;
        color:#d05701;
    }
    .courseTimeSetting{
        display:flex;
        align-items:baseline;
        justify-content:space-between;
      
    }
    .checkbox{margin-top:unset;margin-bottom:unset;}
    
</style>
<div class="MainContainer">
    <div class="Title">
        支付码生成
    </div>
    <div class="QRSetting">
        <div class="courseTimeSetting">
            <div>
                <label style="width:50px;">课时:</label><input type="number" id="courseTime" class="form-control" />
            </div>
            
            <div class="checkbox checkbox-warning" >
                <input id="cb_NeedCourseTime" type="checkbox">
                <label for="cb_NeedCourseTime">
                    仅支付
                </label>
            </div>
        </div>
       
       
        <label>输入用户付款金额</label><input type="number" id="payAmount" class="form-control" />

        <input type="button" id="payQRGen" class="btn btn-danger" value="生成支付码" />
    </div>
    <div class="QRArea">
        <img id="QRImg" src="" />
    </div>
</div>
<input id="UserRole" type="hidden" value="@Model.UserRole" />



